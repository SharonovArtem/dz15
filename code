using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Web;

namespace jun1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int i;
            int basisDegree = 2;
            int maxNumber = 20;
            double randomNumber = random.Next(0, maxNumber);

            for (int minimalDegree = 1; minimalDegree <= randomNumber; minimalDegree++)
            {
                i = (int)Math.Pow(basisDegree, minimalDegree);

                if (i > randomNumber)
                {
                    Console.WriteLine(randomNumber);
                    Console.WriteLine(i);
                    Console.WriteLine(minimalDegree);
                    break;
                }
                
            }
                
        }
    }
}
